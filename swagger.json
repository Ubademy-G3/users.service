    "paths": {
        "/users": {
            "post": {
                "tags": ["Users"],
                "summary": "Creates new user",
                "description": "Returns created user",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "The user to create",
                        "schema": {
                            "required": [
                                "email",
                                "firstName",
                                "lastName"
                            ],
                            "properties": {
                                "email": {
                                    "type": "string"
                                },
                                "firstName": {
                                    "type": "string"
                                },
                                "lastName": {
                                    "type": "string"
                                },
                                "rol": {
                                    "type": "string"
                                },
                                "location": {
                                    "type": "string"
                                },
                                "interests": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "profilePictureUrl": {
                                    "type": "string"
                                },
                                "subscription": {
                                    "type": "string"
                                },
                                "subscriptionExpirationDate": {
                                    "type": "string"
                                },
                                "favoriteCourses": {
                                    "type": "array",
                                    "items": {
                                        "type": "integer"
                                    }
                                },
                                "coursesHistory": {
                                    "type": "array",
                                    "items": {
                                        "type": "integer"
                                    }
                                }
                            }
                        }
                    },
                    {
                        "name": "authorization",
                        "in": "header"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Created user",
                        "schema": {
                            "type": "object",
